<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Alav.SM</Title>
    <Copyright>Â© Gebekov Alavutdin S., 2022</Copyright>
    <Description>Alav.SM - tools for Implementing the State Machine</Description>
    <PackageProjectUrl>https://github.com/GebekovAS/Alav.SM</PackageProjectUrl>
    <RepositoryUrl>https://github.com/GebekovAS/Alav.SM</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>alav.sm,alav,statemachine</PackageTags>
    <PackageReleaseNotes>Init</PackageReleaseNotes>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
